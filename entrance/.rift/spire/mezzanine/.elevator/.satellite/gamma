rintf "Are you armed? y/n  "
read RESP

if [[ $RESP =~ ^[Yy]$ ]]; then
    if grep --quiet --only-matching "sword" <<< $I; then
        roll
    else
        cat << EOF
Oh, no!  You have lost your blade!  Your attacks will be
less effective.

EOF
        roll
    fi
else
    cat << EOF
Sparks fly from the robot, and it falls to pieces.  

EOF
    #disassemble
    echo
fi


















































































































































































































































































